<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/home_top_iv"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/img_default_4_x_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/home_title_tv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="포근하게 덮어주는 꿈의 목소리"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="67dp"
        />

    <ImageView
        android:id="@+id/home_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/home_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 100곡 2021.09.25"
        android:textSize="13sp"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/home_play_iv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="35dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/home_mini_album_01_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/home_date_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="10dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_mini_title_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락"
        android:textSize="14sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/home_mini_singer_01_tv"
        app:layout_constraintStart_toEndOf="@id/home_mini_album_01_iv"
        app:layout_constraintTop_toTopOf="@+id/home_mini_album_01_iv"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/home_mini_singer_01_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="아이유 (IU)"
        android:textColor="#ffffff"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/home_mini_album_01_iv"
        app:layout_constraintStart_toEndOf="@id/home_mini_album_01_iv"
        app:layout_constraintTop_toBottomOf="@id/home_mini_title_01_tv" />


    <androidx.cardview.widget.CardView
        android:id="@+id/home_mini_album_02_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_mini_album_01_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/home_mini_title_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="라일락 2"
        android:textSize="14sp"
        android:textColor="#ffffff"

        app:layout_constraintStart_toEndOf="@id/home_mini_album_02_iv"
        app:layout_constraintTop_toTopOf="@id/home_mini_album_02_iv"
        app:layout_constraintBottom_toTopOf="@id/home_mini_singer_02_tv"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/home_mini_singer_02_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="14sp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="@id/home_mini_album_02_iv"
        app:layout_constraintStart_toEndOf="@id/home_mini_album_02_iv"
        app:layout_constraintTop_toBottomOf="@id/home_mini_title_02_tv"
        android:layout_marginLeft="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>